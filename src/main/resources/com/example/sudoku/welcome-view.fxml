<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox id="root" alignment="CENTER" prefHeight="453.0" prefWidth="340.0" spacing="30.0" stylesheets="@Styles/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sudoku.controller.WelcomeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <ImageView fitHeight="138.0" fitWidth="142.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Images/Icon.png" />
         </image>
      </ImageView>
      <Label text="SUDOKU" textFill="WHITE">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <Button id="ButtonRed" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#startGame" prefHeight="38.0" prefWidth="180.0" text="    INICIAR JUEGO" textOverrun="CLIP">
       <graphic>
           <ImageView id="imagen1" fx:id="imagen1" fitHeight="29.0" fitWidth="40.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
               <Image url="@Images/start.png" />
           </ImageView>
       </graphic>
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
       </Button>
      <Button id="ButtonBlue" alignment="TOP_LEFT" mnemonicParsing="false" prefHeight="38.0" prefWidth="187.0" text="     INSTRUCIONES" textOverrun="CLIP">
         <graphic>
            <ImageView id="imagen1" fx:id="imagen11" fitHeight="58.0" fitWidth="33.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Images/bombilla.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button id="ButtonGrey" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#endGame" prefHeight="38.0" prefWidth="187.0" text="         SALIR" textOverrun="CLIP">
         <graphic>
            <ImageView id="imagen1" fx:id="imagen111" fitHeight="36.0" fitWidth="28.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Images/apagar.png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</VBox>
